<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_dark"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® NUMGUESS ðŸŽ®"
            android:textSize="24dp"
            android:textColor="@color/lime"
            android:fontFamily="@font/press_start_2p"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/textViewInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="36dp"
            android:textColor="@color/white"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:background="@color/purple_mid"
            android:padding="36dp"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:id="@+id/layoutRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@id/textViewInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textViewRoundLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round:"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/press_start_2p" />

            <TextView
                android:id="@+id/textViewRoundNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="20dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/press_start_2p"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            app:layout_constraintTop_toBottomOf="@id/textViewInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result: "
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/press_start_2p"
                app:layout_constraintTop_toBottomOf="@id/textViewInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textViewResultNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/press_start_2p"
                app:layout_constraintTop_toBottomOf="@id/textViewInput"
                app:layout_constraintStart_toStartOf="@id/textViewResult"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <GridLayout
            android:id="@+id/gridNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            app:layout_constraintTop_toBottomOf="@id/layoutResult"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/button1"
                android:text="1"
                style="@style/ArcadeButton"/>
            <Button
                android:id="@+id/button2"
                android:text="2"
                style="@style/ArcadeButton"/>
            <Button
                android:id="@+id/button3"
                android:text="3"
                style="@style/ArcadeButton"/>
            <Button
                android:id="@+id/button4"
                android:text="4"
                style="@style/ArcadeButton"/>
            <Button
                android:id="@+id/button5"
                android:text="5"
                style="@style/ArcadeButton"/>
            <Button
                android:id="@+id/button6"
                android:text="6"
                style="@style/ArcadeButton"/>
            <Button
                android:id="@+id/button7"
                android:text="7"
                style="@style/ArcadeButton"/>
            <Button
                android:id="@+id/button8"
                android:text="8"
                style="@style/ArcadeButton"/>
            <Button
                android:id="@+id/button9"
                android:text="9"
                style="@style/ArcadeButton"/>
            <Button
                android:id="@+id/buttonSubmit"
                android:text="OK"
                style="@style/ArcadeButtonSmall"
                android:backgroundTint="@color/lime"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/button0"
                style="@style/ArcadeButton"
                android:text="0" />

            <Button
                android:id="@+id/buttonDelete"
                android:text="âŒ«"
                android:textStyle="bold"
                style="@style/ArcadeButtonSmall"
                android:backgroundTint="@color/orange"
                android:layout_marginStart="8dp"/>
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
